<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:text="Gallery Auction"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="10dp"
            android:textColor="#447fff"
            android:text="For buyer"/>

    <Button
        android:id="@+id/Artist_Main_Art_List_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:background="#d2d2d2"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        android:text="현재 진행중인 Auction" />

        <com.GalleryAuction.Item.GridViewItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:horizontalSpacing="2dp"
            android:isScrollContainer="false"
            android:numColumns="1"
            android:stretchMode="columnWidth"
            android:verticalSpacing="20dp"
            android:id="@+id/bidder_going_listview">

        </com.GalleryAuction.Item.GridViewItem>
    <Button
        android:id="@+id/Bidder_Main_See_List_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="#d2d2d2"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        android:text="내가 본 ArtList" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d2d2d2"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/Bidder_Main_See_List_layout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="bottom">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingBottom="5dp"
            android:orientation="vertical"
            android:id="@+id/Bidder_Main_See_List_layout2">

            <com.GalleryAuction.Item.GridViewItem
                android:id="@+id/Bidder_Main_See_List_gridview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:horizontalSpacing="2dp"
                android:isScrollContainer="false"
                android:numColumns="2"
                android:stretchMode="columnWidth"
                android:verticalSpacing="20dp">

            </com.GalleryAuction.Item.GridViewItem>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/Bidder_Main_WinningBid_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="#d2d2d2"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        android:text="낙찰된 Auction" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d2d2d2"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/Bidder_Main_WinningBid_Layout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="bottom">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingBottom="5dp"
            android:orientation="vertical">

            <com.GalleryAuction.Item.GridViewItem
                android:id="@+id/Bidder_Main_WinningBid_GridView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:horizontalSpacing="2dp"
                android:isScrollContainer="false"
                android:numColumns="2"
                android:stretchMode="columnWidth"
                android:verticalSpacing="20dp">

            </com.GalleryAuction.Item.GridViewItem>
        </LinearLayout>
    </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:layout_gravity="end"
            android:textColor="?android:attr/textColorPrimaryInverse"
            android:text="@string/purchase"
            android:visibility="gone"
            android:id="@+id/purchase_button5" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:layout_gravity="end"
            android:textColor="?android:attr/textColorPrimaryInverse"
            android:text="@string/purchase_not_invalidated"
            android:visibility="gone"
            android:id="@+id/purchase_button_not_invalidated5" />
        <TextView
            android:id="@+id/purchase_button_not_invalidated_description5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:gravity="end"
            android:textAlignment="gravity"
            android:visibility="gone"
            android:text="@string/purchase_button_not_invalidated_description"
            />
        <TextView
            android:id="@+id/confirmation_message5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@string/purchase_done"
            android:visibility="gone"
            android:enabled="false" />
        <TextView
            android:id="@+id/encrypted_message5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@string/purchase_done"
            android:visibility="gone"/>
    </LinearLayout>

</ScrollView>
