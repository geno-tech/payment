<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:id="@+id/scrollview2">
<LinearLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/red"
        android:text="Gallery Auction"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="10dp"
        android:textColor="#447fff"
        android:text="For buyer"/>

    <Button
        android:id="@+id/Artist_Main_Art_List_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="#d2d2d2"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        android:text="현재 진행중인 Auction" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnWidth="150dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:isScrollContainer="false"
            android:dividerHeight="15dp"
            android:divider="#00000000"
            android:numColumns="auto_fit"
            android:id="@+id/bidder_going_listview"
            android:stretchMode="columnWidth">

        </ListView>
    <Button
        android:id="@+id/Bidder_Main_See_List_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="#d2d2d2"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        android:text="내가 본 ArtList" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d2d2d2"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/Bidder_Main_See_List_layout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="bottom">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingBottom="5dp"
            android:orientation="vertical"
            android:id="@+id/Bidder_Main_See_List_layout2">

            <com.GalleryAuction.Item.GridViewItem
                android:id="@+id/Bidder_Main_See_List_gridview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:horizontalSpacing="2dp"
                android:isScrollContainer="false"
                android:numColumns="2"
                android:stretchMode="columnWidth"
                android:verticalSpacing="20dp">

            </com.GalleryAuction.Item.GridViewItem>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/Bidder_Main_WinningBid"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="#d2d2d2"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        android:text="낙찰된 Auction" />
    </LinearLayout>

</ScrollView>