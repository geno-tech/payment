<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape>
            <gradient
                android:angle="270"
                android:endColor="#FFFFFFFF"
                android:startColor="#FFFFFFFF" />

            <stroke
                android:width="2dp"
                android:color="#FFFFFF" />

            <corners
                android:bottomLeftRadius="0dip"
                android:bottomRightRadius="0dip"
                android:topLeftRadius="30dip"
                android:topRightRadius="30dip" />
        </shape>
    </item>
    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape>
            <gradient
                android:angle="270"
                android:endColor="#FFa3a39e"
                android:startColor="#FFa3a39e" />

            <stroke
                android:width="2dp"
                android:color="#e3e3e3" />

            <corners
                android:bottomLeftRadius="0dip"
                android:bottomRightRadius="30dip"
                android:topLeftRadius="30dip"
                android:topRightRadius="30dip" />
        </shape>
    </item>

</layer-list>